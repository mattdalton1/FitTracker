<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Record_Route">
    <fragment
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="340dp"
        class="com.google.android.gms.maps.SupportMapFragment"
        android:layout_gravity="top"
        android:layout_below="@+id/horizontalScrollView1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <com.matthew.fittracker.fit_tracker.logic.MiniMenu
        android:id="@+id/popupWindow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/map"
        android:gravity="left"
        android:orientation="vertical"
        android:padding="30dp" >
        <CheckBox
            android:id="@+id/mapTypeSatellite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/satelliteText"
            android:textSize="15sp"
            android:textColor="#F5F5DC"
            android:textStyle="bold" />
        <CheckBox
            android:id="@+id/mapTypeTerrain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/terrainText"
            android:textColor="#F5F5DC"
            android:textSize="15sp"
            android:textStyle="bold" />
        <CheckBox
            android:id="@+id/takePhoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Take Photo"
            android:textColor="#F5F5DC"
            android:textSize="15sp"
            android:textStyle="bold"/>
    </com.matthew.fittracker.fit_tracker.logic.MiniMenu>
    <HorizontalScrollView
        android:id="@+id/horizontalScrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="#EEEEEE"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="62dp"
            android:orientation="horizontal" >
            <TextView
                android:id="@+id/textTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/timeTextA"
                android:textColor="#6B6B47"
                android:textStyle="bold"
                android:layout_marginTop="15dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="10dp"
                android:textAppearance="?android:attr/textAppearanceMedium" />
            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/timeTextB"
                android:textColor="#3D1000"
                android:layout_marginTop="15dp"
                android:layout_marginRight="20dp"
                android:textAppearance="?android:attr/textAppearanceMedium" />
            <TextView
                android:id="@+id/textDistance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/distanceTextA"
                android:textColor="#6B6B47"
                android:textStyle="bold"
                android:layout_marginTop="15dp"
                android:layout_marginRight="20dp"
                android:textAppearance="?android:attr/textAppearanceMedium" />
            <TextView
                android:id="@+id/distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/caloriesTextB"
                android:textColor="#3D1000"
                android:layout_marginTop="15dp"
                android:layout_marginRight="20dp"
                android:textAppearance="?android:attr/textAppearanceMedium" />
            <TextView
                android:id="@+id/textCalories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/caloriesTextA"
                android:textColor="#6B6B47"
                android:textStyle="bold"
                android:layout_marginTop="15dp"
                android:layout_marginRight="20dp"
                android:textAppearance="?android:attr/textAppearanceMedium" />
            <TextView
                android:id="@+id/calories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/caloriesTextB"
                android:textColor="#3D1000"
                android:layout_marginTop="15dp"
                android:layout_marginRight="20dp"
                android:textAppearance="?android:attr/textAppearanceMedium" />
            <TextView
                android:id="@+id/textPace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/paceTextA"
                android:textColor="#4747D1"
                android:textStyle="bold"
                android:layout_marginTop="15dp"
                android:layout_marginRight="20dp"
                android:textAppearance="?android:attr/textAppearanceMedium" />
            <TextView
                android:id="@+id/pace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/paceTextB"
                android:textColor="#4747D1"
                android:layout_marginTop="15dp"
                android:layout_marginRight="20dp"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </LinearLayout>
    </HorizontalScrollView>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/map"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:weightSum="1">
        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.12"
            android:background="#E3E3E3">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/hline"
                android:id="@+id/imageView"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="@string/start_label"
                android:id="@+id/startBtn"
                android:onClick="onClick"
                android:textColor="#FFFFFF"
                android:background="@color/counter_text_bg"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="@string/stop_label"
                android:id="@+id/stopBtn"
                android:onClick="onClick"
                android:textColor="#FFFFFF"
                android:background="@color/list_background_pressed"
                android:layout_alignBottom="@+id/resumeBtn"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="@string/btnPause"
                android:id="@+id/pauseBtn"
                android:onClick="onClick"
                android:textColor="#FFFFFF"
                android:background="#DB674A"
                android:visibility="invisible"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignRight="@+id/startBtn"
                android:layout_alignEnd="@+id/startBtn" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="@string/btnResume"
                android:id="@+id/resumeBtn"
                android:onClick="onClick"
                android:textColor="#FFFFFF"
                android:background="@color/counter_text_bg"
                android:visibility="invisible"
                android:layout_alignTop="@+id/pauseBtn"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignRight="@+id/startBtn"
                android:layout_alignEnd="@+id/startBtn" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="Options"
                android:id="@+id/optionsBtn"
                android:textColor="#FFFFFF"
                android:background="#21DB14"
                android:layout_marginTop="8dp"
                android:layout_gravity="center_horizontal"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
